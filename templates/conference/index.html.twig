{% extends 'layout.html.twig' %}

{% block title %} Conference Guestbook - {{ '' }} {% endblock %}

{% block content %} 
	<div class="container-fluid">
		<div class="container">
			<div class="row">
				<div class="col-12">
					<div class="card">
						<div class="card-body">
							{% for conference in conferences %}
								<h4>{{ conference }}</h4>
								<p>
									<a href="{{ path('conference', { id: conference.id }) }}">View</a>
								</p>
							{% endfor %}
						</div>
					</div>
				</div>
			</div>   
		</div>
	</div> 
{% endblock %}

{% block javascripts %}
	{{  parent()  }}
{% endblock %}
